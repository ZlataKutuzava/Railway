<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.Database_layer.Stations" table="stations">
    <id name="stationId" type="java.lang.Integer">
    <column name="name=id_station" />
    <generator class="identity" />
    </id>
        <property name="stationName" type="string">
            <column name="station_name" length="40" not-null="true" unique="true" />
        </property>

    </class>
</hibernate-mapping>